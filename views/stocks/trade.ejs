          <li class='tab'><a href='/positions/closed'>Closed Positions</a></li>
        </ul>
      </div>
    </nav>
  </div>
  <main class='container'>
    <div class='row'>
      <div class='col s12 m12'>
        <h3>Enter new transaction</h3>

        <form action='/transactions' method='POST'>
          <div class='row'>
            <div class='input-field'>
              <label for='ticker'>Ticker: </label>
              <input type='text' autofocus="true" required name='ticker' id='ticker'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field'>
              <label for='tradeDate'> </label>
              <input type='date' required name='tradeDate' id='tradeDate'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field'>
              <label for='numShares'># Shares: </label>
              <input type='number' required name='numShares' id='numShares'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field'>
              <label for='sharePrice'>$ per Share: </label>
              <input type='number' required min='0' step='0.0001' name='sharePrice' id='sharePrice'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field'>
              <label for='commission'>Commission: </label>
              <input type='number' required min='0' step='0.01' name='commission' id='commission'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field'>
              <label for='fees'>Fees: </label>
              <input type='number' required min='0' step='0.01' name='fees' id='fees'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field'>
              <label for='direction'>Long or Short: </label>
              <input type='text' required name='direction' id='direction'>
            </div>
          </div>

          <div class='row center'>
            <button class='btn waves-effect waves-light' type='submit' name='action'>Submit
              <i class='material-icons right'>send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>

