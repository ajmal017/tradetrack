<!DOCTYPE html>
<html lang='en'>
<head>
  <meta charset='UTF-8'>
  <link href='http://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet'>
  <link type='text/css' rel='stylesheet' href='../css/materialize.css'  media='screen,projection'/>
  <link rel='stylesheet' href='../css/style.css'>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'/>
  <title>Update Trade</title>
</head>
<body>

    <%- include('../partials/nav', {home: false, trade: true, open: false, closed: false}) %>

  <main class='container'>
    <div class='row'>
      <div class='col s12 m12'>
        <h4><%= company%></h4>
        <h5>Shares: <%= numShares%></h5>
        <h5>Price: $<%= sharePrice%></h5>
        <h5>Commission: $<%= commission%></h5>
        <h5>Type: <%= direction%></h5>
        <h5>Action: <%= action%></h5>
      </div>
    </div>

    <div class='row'>
      <div class='col s12 m12'>
        <div class='row'>
          <div class='col s12 m5'>  <!-- left column -->
            <h4>Update Transaction</h4>

            <form method='POST' action='/transactions?_method=PUT'>

              <div class='row'>
                <div class='input-field col s12'>
                  <label for='tradeDate'>Trade Date: </label>
                  <input type='date' autofocus='true' name='tradeDate' id='tradeDate' class='validate'>
                </div>
              </div>

              <div class='row'>
                <div class='input-field col s12 l6'>
                  <select name='direction' id='direction'>
                    <option value='' disabled selected>Choose your option</option>
                    <option value='LONG'>Long</option>
                    <option value='SHORT'>Short</option>
                  </select>
                  <label>Long / Short</label>
                </div>
              </div>

              <div class='row'>
                <div class='input-field col s12 l6'>
                  <label for='numShares'># Shares: </label>
                  <input type='number' required name='numShares' id='numShares'>
                </div>
              </div>

              <div class='row'>
                <div class='input-field col s12 l6'>
                  <label for='sharePrice'>$ per Share: </label>
                  <input type='number' required min='0' step='0.0001' name='sharePrice' id='sharePrice'>
                </div>
              </div>

              <div class='row'>
                <div class='input-field col s12 l6'>
                  <label for='commission'>Commission: </label>
                  <input type='number' required min='0' step='0.01' name='commission' id='commission'>
                </div>
              </div>

              <div class='row'>
                <div class='input-field col s12 l6'>
                  <label for='fees'>Fees: </label>
                  <input type='number' min='0' step='0.01' name='fees' id='fees'>
                </div>
              </div>

              <input type='hidden' name='_method' value='put'>

              <div class='row center'>
                <button class='submit btn waves-effect waves-light' type='submit' name='action'>Update
                  <i class='material-icons right'>send</i>
                </button>
              </div>
            </form>
          </div>

          <div class='col m2'>  <!-- middle column -->
          </div>

          <div class='col s12 m5'>  <!-- right column -->
            <h4 class='center'>Delete Transaction</h4>
            <form method='POST' action='/transactions?_method=DELETE'>
              <div class='row center'>
                <input type='hidden' name='_method' value='delete'>
              </div>

              <div class='row center'>
                <button class='submit btn waves-effect waves-light' type='submit' name='action'>Delete
                  <i class='material-icons right'>send</i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

    <%- include('../partials/footer') %>

</body>
</html>
